<main>

    <header>
        <img src="~/images/mapa_polski.jpg" alt="Polska" />
    </header>

    <div id="lewy1">
        <h4>Podaj początek nazwy miasta</h4>

        <form method="get">
            <input type="text" name="filtr" value="@ViewBag.Filtr" />
            <input type="submit" value="Szukaj" id="szukaj" />
        </form>
    </div>

    <div id="prawy">
        <h1>Wyniki wyszukiwania miast z uwzględnieniem filtra:</h1>

        @if (!string.IsNullOrEmpty(ViewBag.Filtr))
        {
            <p>@ViewBag.Filtr</p>

            <table>
                <tr>
                    <th>Miasto</th>
                    <th>Województwo</th>
                </tr>

                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Nazwa</td>
                        <td>@m.Wojewodztwo</td>
                    </tr>
                }
            </table>
        }
    </div>

    <div id="lewy2">
        <p>Egzamin INF.03</p>
        <p>Autor: 0000000000</p>
    </div>

</main>
