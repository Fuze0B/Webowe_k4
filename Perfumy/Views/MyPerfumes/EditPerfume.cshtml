@model Perfume
<h1>Edycja Perfum</h1>
<form asp-action="EditPerfume" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row m-2">
        <label class="col-3 text-end" asp-for="Brand"></label>
        <input asp-for="Brand" class="col-6" />
        <span asp-validation-for="Brand" class="col-3 text-danger"></span>
    </div>
    <div class="row m-2">
        <label class="col-3 text-end" asp-for="Model"></label>
        <input asp-for="Model" class="col-6" />
        <span asp-validation-for="Model" class="col-3 text-danger"></span>
    </div>
    <div class="row m-2">
        <label class="col-3 text-end" asp-for="Scent"></label>
        <input asp-for="Scent" class="col-6" />
        <span asp-validation-for="Scent" class="col-3 text-danger"></span>
    </div>
        <div class="row m-2">
        <label class="col-3 text-end" asp-for="Amount"></label>
        <input asp-for="Amount" class="col-6" />
        <span asp-validation-for="Amount" class="col-3 text-danger"></span>
    </div>
    <div class="row m-2">
        <div class="col-3"></div>
        <input type="submit" class="btn btn-primary m-2 col-6" value="Zapisz perfum" />
    </div>

</form>