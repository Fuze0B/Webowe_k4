@using Perfumy.Models
@model List<Perfume>
@{
    int i =0;
    i++;
}
<h1>
    My Perfumes
</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Scent</th>
            <th>Amount</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var c in Model)
    {
        <tr>
            <td>@c.Brand</td>
            <td>@c.Model</td>
            <td>@c.Scent</td>
            <td>@c.Amount ml</td>
            <td>
            <a asp-action="DeletePerfume" asp-route-id="@c.Id" class="btn btn-danger">Usuń</a>
            <a asp-action="EditPerfume" asp-route-id="@c.Id" class="btn btn-secondary">Edytuj</a>
            </td>
        </tr>
    }
    </tbody>
</table>